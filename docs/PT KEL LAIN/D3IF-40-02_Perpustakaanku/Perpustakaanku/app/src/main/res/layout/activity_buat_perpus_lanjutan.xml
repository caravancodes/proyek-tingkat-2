<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phadcode.perpustakaanku.BuatPerpusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Perpustakaan"
            android:textSize="18sp"
            android:textColor="#0084b4"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_blue"
            android:inputType="textEmailAddress"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Email Perpustakaan"
            android:textColor="#0084b4"
            android:minLines="1"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tvNoTelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. Telpon Perpustakaan"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:textColor="#0084b4"/>

        <EditText
            android:id="@+id/etNoTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:background="@drawable/edit_text_blue"
            android:padding="5dp"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textColorHint="@android:color/darker_gray"
            android:hint="No. Telpon Perpustakaan"
            android:textColor="#0084b4"
            android:minLines="1"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tvGPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_blue"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Klik Disini untuk Tambah Lokasi"
            android:textColor="#0084b4"
            android:inputType="textMultiLine"
            android:maxLines="2"/>

        <Button
            android:id="@+id/btnBuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_rounded_blue"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="Buat Perpustakaan"/>

    </LinearLayout>

</RelativeLayout>
