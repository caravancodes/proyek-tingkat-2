<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phadcode.perpustakaanku.BuatPerpusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama perpustakaan"
            android:textSize="18sp"
            android:textColor="#0084b4"/>

        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:background="@drawable/edit_text_blue"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Nama pertakaan"
            android:textColor="#424242"
            android:minLines="1"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tvAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat perpustakaan"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:textColor="#0084b4"/>

        <EditText
            android:text=""
            android:id="@+id/etAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_blue"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Alamat perpustakaan"
            android:inputType="textCapWords"
            android:textColor="#424242"
            android:minLines="1"
            android:maxLines="1"/>

        <Button
            android:id="@+id/btnLanjut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_rounded_blue"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="Lanjutkan"/>

    </LinearLayout>

</RelativeLayout>
